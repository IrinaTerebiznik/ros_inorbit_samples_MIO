<launch>
  <!-- Primer nodo: inorbit_republisher -->
  <node name="inorbit_republisher" pkg="inorbit_republisher" executable="republisher">
    <param name="config" value="ros2_ws/src/inorbit_republisher/test/sample_data/example.yaml" />
  </node>

  <!-- Segundo nodo: rosbag2 player -->
  <node pkg="rosbag2" executable="play" name="player" output="screen" args="ros2_ws/src/inorbit_republisher/test/sample_data/hardcodedRosbag"/>
</launch>
