<launch>
  <!-- Primer nodo: inorbit_republisher -->
  <node name="inorbit_republisher" pkg="inorbit_republisher" exec="republisher">
    <param name="config" value="$(find inorbit_republisher)/test/sample_data/config.yaml" />
  </node>

  <!-- Segundo nodo: rosbag2 player -->
  <node pkg="rosbag2" exec="play" name="player" output="screen" args="-l $(find inorbit_republisher)/test/sample_data/hardcodedRosbag" />
</launch>
